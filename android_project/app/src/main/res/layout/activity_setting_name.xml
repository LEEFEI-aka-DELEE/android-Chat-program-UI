<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A6BDC"
    tools:context=".SettingNameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change\nName"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/Setting_name_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input your NEW Name:"
        android:layout_below="@id/Setting_name_title"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:id="@+id/Setting_name_text"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Setting_name_text"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:id="@+id/Setting_name_input"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="75dp"
        android:layout_below="@id/Setting_name_input"
        android:layout_marginTop="30dp"
        android:background="#2A6BDC"
        android:text="Comfirm"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:id="@+id/Setting_name_comfirm"/>

</RelativeLayout>