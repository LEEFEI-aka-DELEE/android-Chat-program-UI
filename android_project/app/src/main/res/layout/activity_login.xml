<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textStyle="bold"
        android:textSize="55dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/Login_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/Login_title"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:id="@+id/Login_account" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/Login_account"
        android:layout_below="@id/Login_account"
        android:layout_marginTop="30dp"
        android:text="Password :"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/Login_password"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/Login_account"
        android:layout_alignTop="@id/Login_account"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/Login_account_input"
        android:inputType="textPersonName"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/Login_password"
        android:layout_alignTop="@id/Login_password"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/Login_password_input"
        android:inputType="textPassword"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Login_password"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="50dp"
        android:text="Login my account"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/Login_to_main"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Login_to_main"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="50dp"
        android:text="create a new one"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/Login_to_register"/>

</RelativeLayout>